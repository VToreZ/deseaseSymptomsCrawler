{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "ES2022",
    "outDir": "./build",
    "rootDir": "./src",
    "lib": ["es2019","ESNext"],
    "module": "ESNext",
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
